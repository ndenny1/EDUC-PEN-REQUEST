{
  "name": "pen-request",
  "version": "1.0.0",
  "private": true,
  "description": "Simple PEN request UI.",
  "author": "Marco Villeneuve <marco.villeneuve@gov.bc.ca>",
  "scripts": {
    "serve": "node_modules/.bin/vue-cli-service serve",
    "build": "node_modules/.bin/vue-cli-service build",
    "test": "npm run unit && npm run e2e",
    "e2e": "node test/e2e/runner.js",
    "lint": "eslint --ext .js,.vue src test/unit test/e2e/specs",
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "npm run dev",
    "unit": "jest --config test/unit/jest.conf.js --coverage"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "core-js": "^2.6.5",
    "cryptico-js": "^1.1.0",
    "vue": "^2.6.6",
    "vue-clipboard2": "^0.3.0",
    "vue-router": "^3.0.6",
    "vuetify": "^2.0.5",
    "vuex": "^3.1.1",
    "@babel/preset-env": "7.3.4",
    "sass-loader": "^7.1.0",
    "sass": "^1.22.7",
    "path": "^0.12.7",
    "@babel/polyfill": "^7.4.4",
    "nightwatch": "^1.2.1",
    "geckodriver": "^1.16.2",
    "chromedriver": "^76.0.0",
    "dotenv": "^8.0.0",
    "regenerator-runtime": "^0.13.3",
    "jest-junit": "^7.0.0",
    "purgecss-webpack-plugin": "^1.5.0",
    "glob-all": "^3.1.0"
  },
  "devDependencies": {
    "@vue/cli": "^3.10.0",
    "@vue/cli-plugin-pwa": "^3.10.0",
    "@vue/cli-plugin-babel": "^3.10.0",
    "@vue/cli-plugin-eslint": "^3.10.0",
    "@vue/cli-plugin-unit-jest": "^3.10.0",
    "@vue/cli-service": "^3.10.0",
    "@vue/test-utils": "1.0.0-beta.29",
    "@babel/core": "^7.5.5",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.2.3",
    "jest": "^24.8.0",
    "jest-sonar-reporter": "^2.0.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "vue-cli-plugin-vuetify": "^0.6.3",
    "vue-jest": "^3.0.4",
    "vue-template-compiler": "^2.5.21",
    "vuetify-loader": "^1.3.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly",
      "_": false
    },
    "parserOptions": {
      "parser": "babel-eslint",
      "sourceType": "module",
      "ecmaVersion": 8
    },
    "rules": {
      "no-console": "off",
      "eol-last": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  }
}
